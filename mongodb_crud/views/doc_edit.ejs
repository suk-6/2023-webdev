<%- include('layout/doc_header') %>

<div class="container">
    <h3 class="mt-4">문서 수정 ("<%=doc.Subject%>")</h3>
    <form class="mx-auto mt-4" action="/doc/update/<%=doc._id%>" method="post" enctype="multipart/form-data">
        <div class="form-group mb-3">
            <label for="Subject">제목</label>
            <input type="text" class="form-control" id="Subject" name="Subject" aria-describedby="subjectHelp" value="<%= doc.Subject%>" required />
            <small id="subjectHelp" class="form-text text-muted">최대 100자 이내로 특수 문자를 입력하실 수 없습니다.</small>
        </div>
        <div class="form-group mb-3">
            <label for="LastStatus">최종 상태</label>
            <select id="LastStatus" name="LastStatus" class="form-control">
                <option selected>문서상태를 선택하세요.</option>
                <option <%if(doc.LastStatus=="상신"){%>selected<%}%>>상신</option>
                <option <%if(doc.LastStatus=="승인"){%>selected<%}%>>승인</option>
                <option <%if(doc.LastStatus=="반려"){%>selected<%}%>>반려</option>
                <option <%if(doc.LastStatus=="보류"){%>selected<%}%>>보류</option>
            </select>
        </div>
        <div class="form-group mb-3">
            <label for="WriteUserName">작성자명</label>
            <input type="text" class="form-control" id="WriteUserName" name="WriteUserName" value="<%=doc.WriteUserName%>" required />
        </div>
        <div class="form-group mb-3">
            <label for="BodyDesc">문서내용</label>
            <textarea class="form-control" id="BodyDesc" name="BodyDesc" rows="3"><%=doc.BodyDesc%></textarea>
        </div>
        <div class="form-group mb-3">
            <label for="Thumbnail" class="form-label">썸네일 이미지</label>
            <input class="form-control form-control-lg" type="file" id="Thumbnail" name="Thumbnail" />
            <img src="/<%= doc.Thumbnail %>" width="200" class="img-thumbnail mt-1" />
            <input type="hidden" name="old_thumbnail" value="<%= doc.Thumbnail %>" />
        </div>
        <div class="form-group mb-3">
            <button type="submit" class="btn btn-primary">저장</button>
            <a class="btn btn-secondary" href="/">취소</a>
        </div>
    </form>
</div>

<%- include('layout/doc_footer') %>